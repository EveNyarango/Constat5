<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity"
    android:background="@drawable/cov4">

    <ImageView
        android:id="@+id/cona"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="170dp"
        android:scaleType="fitCenter"
        android:alpha="0.8"
        android:src="@drawable/cov6" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="192dp"
        android:layout_height="31dp"
        android:fontFamily="sans-serif-medium"
        android:layout_above="@+id/designer"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="ConaStat"
        android:textSize="30sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/designer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is an android application that shows realtime and daily statistical data on COVID-19 from different country."
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>